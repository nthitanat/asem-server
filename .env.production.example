# Production Environment Configuration Template
# Copy this file to .env.production and update all values!

NODE_ENV=production
PORT=5001
API_VERSION=v1

# Database Configuration (Docker MySQL)
# Note: DB_HOST will be overridden to 'mysql' by docker-compose.prod.yml
DB_HOST=mysql
DB_PORT=3306
DB_NAME=asem_prod_db
DB_USER=asem_user
DB_PASSWORD=CHANGE_THIS_SECURE_PASSWORD_MIN_32_CHARS
DB_CONNECTION_LIMIT=20

# JWT Configuration (MUST BE SECURE!)
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=CHANGE_THIS_TO_SECURE_RANDOM_STRING_MIN_64_CHARS_LONG_PRODUCTION
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Token Expiry (in seconds)
EMAIL_VERIFICATION_EXPIRY=86400    # 24 hours
PASSWORD_RESET_EXPIRY=3600         # 1 hour

# Email Configuration - Production SMTP
SMTP_HOST=smtp.gmail.com
SMTP_PORT=465
SMTP_SECURE=true
SMTP_USER=your-production-email@yourdomain.com
SMTP_PASS=your-app-specific-password
FROM_EMAIL=noreply@yourdomain.com
FROM_NAME=ASEM Server

# Frontend URL (Production)
FRONTEND_URL=https://yourdomain.com

# Security Configuration (MUST BE SECURE!)
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000        # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100        # Strict limit for production

# CORS Configuration (comma-separated, be specific!)
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Email Verification
EMAIL_VERIFICATION_ENABLED=true
